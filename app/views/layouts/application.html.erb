</head>

<body>

  <div id="wrap">
    <%= render 'shared/nav' %>
    <div class="container">
      <div class="row">
      <div class="col-xs-12 col-md-10 col-md-offset-1">
          <%= render 'shared/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </div> <!-- #WRAP -->
  <%= render 'shared/footer' %>
